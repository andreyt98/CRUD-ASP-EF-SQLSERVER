@model CRUD.Models.User;
@{
    ViewData["Title"] = "Delete User";
}

<a class="fs-4 text-secondary" asp-action="Index" asp-controller="Home"><i class="bi bi-arrow-left-circle"></i></a>
<h1>Delete User</h1>
<form asp-action="Delete" method="post">

    <div class="form-group mb-4">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" disabled readonly />
    </div>
    <div class="form-group mb-4">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" disabled readonly />
    </div>
    <div class="form-group mb-4">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" type="email" class="form-control" disabled readonly/>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
